<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.tacademy.samplebasicwidget.MainActivity">


        <TextView
            android:id="@+id/test_text"
            android:ellipsize="marquee"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/titleColor"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World! Hello World! Hello World! Hello World! Hello World! Hello World! Hello World!" />

    <Button
        android:text="btn"
        android:background="@drawable/btn_selector"
        android:layout_width="wrap_content"
        android:onClick="onMyButtonClick"
        android:layout_height="wrap_content" />
    <CheckBox
        android:id="@+id/check"
        android:button="@drawable/check_selector"
        android:text="check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/group_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:text="man"
            android:id="@+id/radio_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:text="woman"
            android:id="@+id/radio_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>


    <EditText
        android:id="@+id/email"
        android:hint="EmailAddress"
        android:singleLine="true"
        android:ems="10"
        android:nextFocusDown="@+id/pass"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
    <EditText

        android:hint="Password"
        android:singleLine="true"
        android:ems="10"
        android:id="@+id/pass"
        android:imeOptions="actionSend"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/btn_send"
        android:text="send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
